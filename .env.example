# =============================================================================
# BuildBidz Environment Configuration
# =============================================================================
# Copy this file to .env and fill in the values
# Never commit .env to version control
# =============================================================================

# -----------------------------------------------------------------------------
# General
# -----------------------------------------------------------------------------
NODE_ENV=development
LOG_LEVEL=debug
APP_URL=http://localhost:3000
API_URL=http://localhost:8000

# -----------------------------------------------------------------------------
# Firebase Configuration
# -----------------------------------------------------------------------------
NEXT_PUBLIC_FIREBASE_API_KEY=your-api-key
NEXT_PUBLIC_FIREBASE_AUTH_DOMAIN=your-project.firebaseapp.com
NEXT_PUBLIC_FIREBASE_PROJECT_ID=your-project-id
NEXT_PUBLIC_FIREBASE_STORAGE_BUCKET=your-project.firebasestorage.app
NEXT_PUBLIC_FIREBASE_MESSAGING_SENDER_ID=your-sender-id
NEXT_PUBLIC_FIREBASE_APP_ID=your-app-id
NEXT_PUBLIC_FIREBASE_MEASUREMENT_ID=your-measurement-id

# Firebase Admin (Backend)
FIREBASE_SERVICE_ACCOUNT_PATH=firebase-service-account.json

# Database (Postgres)
DATABASE_URL=postgresql://postgres:postgres@localhost:54322/postgres
DATABASE_POOL_SIZE=20
DATABASE_MAX_OVERFLOW=10

# -----------------------------------------------------------------------------
# Redis Configuration
# -----------------------------------------------------------------------------
REDIS_URL=redis://localhost:6379/0
REDIS_CACHE_TTL=3600

# -----------------------------------------------------------------------------
# Neo4j Configuration (Knowledge Graph)
# -----------------------------------------------------------------------------
NEO4J_URI=bolt://localhost:7687
NEO4J_USER=neo4j
NEO4J_PASSWORD=password

# -----------------------------------------------------------------------------
# Storage (Cloudinary & Firebase Storage)
# -----------------------------------------------------------------------------
CLOUDINARY_CLOUD_NAME=your-cloud-name
CLOUDINARY_API_KEY=your-api-key
CLOUDINARY_API_SECRET=your-api-secret

# Frontend access
NEXT_PUBLIC_CLOUDINARY_CLOUD_NAME=your-cloud-name

# Firebase Storage (Linked to FIREBASE_STORAGE_BUCKET above)

# -----------------------------------------------------------------------------
# WhatsApp Cloud API
# -----------------------------------------------------------------------------
WHATSAPP_VERIFY_TOKEN=your-verify-token
WHATSAPP_ACCESS_TOKEN=your-access-token
WHATSAPP_PHONE_NUMBER_ID=your-phone-number-id
WHATSAPP_BUSINESS_ACCOUNT_ID=your-business-account-id
WHATSAPP_APP_SECRET=your-app-secret

# -----------------------------------------------------------------------------
# OpenAI / LLM Configuration
# -----------------------------------------------------------------------------
OPENAI_API_KEY=your-openai-api-key
OPENAI_ORG_ID=your-org-id
OPENAI_MODEL=gpt-4-turbo-preview
OPENAI_EMBEDDING_MODEL=text-embedding-3-small

# Groq Configuration (Supports rotary keys, separate multiple keys with commas)
GROQ_API_KEYS=your-groq-api-key-1,your-groq-api-key-2
GROQ_MODEL=llama3-70b-8192
GROQ_MODEL_20B=openai/gpt-oss-20b
GROQ_MODEL_120B=openai/gpt-oss-120b

# Local LLM (fallback)
LOCAL_LLM_ENDPOINT=http://localhost:11434
LOCAL_LLM_MODEL=llama2

# -----------------------------------------------------------------------------
# Azure Cognitive Services (OCR)
# -----------------------------------------------------------------------------
AZURE_VISION_ENDPOINT=https://your-region.api.cognitive.microsoft.com
AZURE_VISION_KEY=your-azure-vision-key

# Fallback OCR
TESSERACT_PATH=/usr/bin/tesseract

# -----------------------------------------------------------------------------
# ASR Configuration
# -----------------------------------------------------------------------------
# Sarvam AI (India-optimized)
SARVAM_API_KEY=your-sarvam-api-key
SARVAM_ENDPOINT=https://api.sarvam.ai

# Whisper (fallback)
WHISPER_MODEL=medium
WHISPER_DEVICE=cuda

# -----------------------------------------------------------------------------
# Payment Gateways
# -----------------------------------------------------------------------------
RAZORPAY_KEY_ID=your-razorpay-key-id
RAZORPAY_KEY_SECRET=your-razorpay-key-secret

PHONEPE_MERCHANT_ID=your-merchant-id
PHONEPE_SALT_KEY=your-salt-key
PHONEPE_SALT_INDEX=1

# -----------------------------------------------------------------------------
# NBFC Integrations (Embedded Finance)
# -----------------------------------------------------------------------------
CREDABLE_API_KEY=your-credable-api-key
CREDABLE_ENDPOINT=https://api.credable.in

OXYZO_API_KEY=your-oxyzo-api-key
OXYZO_ENDPOINT=https://api.oxyzo.in

# -----------------------------------------------------------------------------
# Accounting Integrations
# -----------------------------------------------------------------------------
TALLY_HOST=localhost
TALLY_PORT=9000

ZOHO_CLIENT_ID=your-zoho-client-id
ZOHO_CLIENT_SECRET=your-zoho-client-secret
ZOHO_REFRESH_TOKEN=your-zoho-refresh-token

ERPNEXT_URL=https://your-erpnext.com
ERPNEXT_API_KEY=your-erpnext-api-key
ERPNEXT_API_SECRET=your-erpnext-api-secret

# -----------------------------------------------------------------------------
# Authentication
# -----------------------------------------------------------------------------
# SSO/OIDC
OIDC_ISSUER=https://accounts.google.com
OIDC_CLIENT_ID=your-oidc-client-id
OIDC_CLIENT_SECRET=your-oidc-client-secret

# SAML (enterprise)
SAML_ENTITY_ID=urn:buildbidz:saml
SAML_SSO_URL=https://idp.example.com/saml/sso
SAML_CERTIFICATE=base64-encoded-certificate

# -----------------------------------------------------------------------------
# Security
# -----------------------------------------------------------------------------
ENCRYPTION_KEY=your-32-byte-encryption-key
JWT_SECRET=your-jwt-secret
JWT_EXPIRY=86400

# Rate Limiting
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=60

# -----------------------------------------------------------------------------
# Observability
# -----------------------------------------------------------------------------
OTEL_EXPORTER_OTLP_ENDPOINT=http://localhost:4317
PROMETHEUS_METRICS_PORT=9090
GRAFANA_ADMIN_PASSWORD=admin

# Sentry (error tracking)
SENTRY_DSN=your-sentry-dsn
SENTRY_ENVIRONMENT=development

# -----------------------------------------------------------------------------
# Celery (Background Workers)
# -----------------------------------------------------------------------------
CELERY_BROKER_URL=redis://localhost:6379/1
CELERY_RESULT_BACKEND=redis://localhost:6379/2
CELERY_WORKER_CONCURRENCY=4

# -----------------------------------------------------------------------------
# Feature Flags
# -----------------------------------------------------------------------------
FEATURE_WHATSAPP_ENABLED=true
FEATURE_EMBEDDED_FINANCE_ENABLED=true
FEATURE_OFFLINE_SYNC_ENABLED=true
FEATURE_AI_COPILOT_ENABLED=true
